<%- include("./partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<h3>
				Delivery Address:
			</h3>
			<h4>
				<%for(var i=0; i<user.address.length; i++){%>
				<%= user.address[i].house%>,
				<%= user.address[i].street%>,
				<%= user.address[i].landmark%>,
				<%= user.address[i].area%>,
				<%= user.address[i].city%>,
				<%= user.address[i].state%>,
				<%= user.address[i].country%>-
				<%= user.address[i].pincode%>
				<%}%>
			</h4>
		</div>
	</div>
	
	<h3>
		Payment Method:
	</h3>
	<div class="form-check">
		<label class="form-check-label">
			<input type="radio" class="form-check-input" name="optradio">Credit/Debit Card
		</label>
	</div>
	<div class="form-check">
		<label class="form-check-label">
			<input type="radio" class="form-check-input" name="optradio">NetBanking
		</label>
	</div>
	<div class="form-check disabled">
		<label class="form-check-label">
			<input type="radio" class="form-check-input" name="optradio" disabled>Bhim/UPI
		</label>
	</div>
	<div class="form-check disabled">
		<label class="form-check-label">
			<input type="radio" class="form-check-input" name="optradio" disabled>Cash/Card on Delivery
		</label>
	</div>
</div>
<%- include("./partials/footer") %>