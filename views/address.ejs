<%- include("./partials/header") %>
<div class="container">
		<h1 style="text-align:center">Add your Delivery Address</h1>
	<div class="row">
		<div class="address">
			<form class="col-lg-12" action ="/checkout" method="POST">
				<div class="form-group">
				<input class="form-control" type="text" name="add[house]" placeholder="House Number" required>
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[street]" placeholder="Street" required>
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[landmark]" placeholder="Landmark" required>
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[area]" placeholder="Area" required>
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[city]" placeholder="City" required>
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[state]" placeholder="State" required>
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[country]" placeholder="Country" required>
				</div>
				<div class="form-group">
				<input class="form-control" type="number" name="add[pincode]" placeholder="Pincode" min=100000 required>
				</div>
				<div class="form-group">
				<input class="form-control" type="number" name="phone" placeholder="Phone" required>
				</div>
				<div class="form-group">
					<div class="row">
						<a style="float-left ;" class="rtc col-lg-4 btn btn-md btn-warning" href="/cart">Return to Cart</a>
						<button style="float-right ;" class="add col-lg-4 btn btn-md btn-primary">
							Add Address
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	
</div>
<%- include("./partials/footer") %>