<%- include("./partials/header") %>
<div class="container">
		<h1 style="text-align:center">Add your Delivery Address</h1>
	<div class="row">
		<div style="width:30%; margin:60px auto">
			<form class="col-lg-12" action ="/checkout" method="POST">
				<div class="form-group">
				<input class="form-control" type="text" name="add[house]" placeholder="House Number">
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[street]" placeholder="Street">
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[landmark]" placeholder="Landmark">
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[area]" placeholder="Area">
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[city]" placeholder="City">
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[state]" placeholder="State">
				</div>
				<div class="form-group">	
				<input class="form-control" type="text" name="add[country]" placeholder="Country">
				</div>
				<div class="form-group">
				<input class="form-control" type="number" name="add[pincode]" placeholder="Pincode">
				</div>
				<div class="form-group">
				<input class="form-control" type="number" name="phone" placeholder="Phone">
				</div>
				<div class="form-group">
					<div class="row">
						<a style="float-left ; margin:10px 25px; padding: 7px 0" class="col-lg-4 btn btn-md btn-warning" href="/cart">Return to Cart</a>
						<button style="float-right ; margin:10px 25px; padding: 7px 0" class="col-lg-4 btn btn-md btn-primary">
							Add Address
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	
</div>
<%- include("./partials/footer") %>